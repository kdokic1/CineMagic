@{
    ViewData["Title"] = "Movie Detail";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-7 offset-1">
            <h1><strong>@Model.Name</strong></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-7 offset-1">
            <b style="font-size:large">Synopsis</b>
            <p><i>@Model.Synopsis</i></p>
        </div>
        <div class="col-3 offset-1">
            <img src="@Url.Content(@Model.PosterURL)" style="width:200px;height:150px/>
        </div>
    </div>
</div>

<div style="margin-top:10px">
    <p style="margin-top:10px"></p>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-5 offset-1">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>Projection Date</th>
                        <th>Projection Time</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.ProjectionsDateTime)
                    {
                        @if (DateTime.Compare(@item, DateTime.Now) > 0)
                        {
                        <tr>
                            <td>
                                @item.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.ToString("HH:mm")

                            </td>
                        </tr>
                            }
                        }
                </tbody>
            </table>
        </div>
        <div class="col-6">

        </div>

    </div>
</div>

<div class="footer">
</div>






