@{
    ViewData["Title"] = "Movie Detail";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-7 offset-1">
            <h1><strong>@Model.Name</strong></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-7 offset-1">
            <b style="font-size:large">Synopsis</b>
            <p><i>@Model.Synopsis</i></p>
        </div>
        <div class="col-3 offset-1">
            <img src="@Url.Content(@Model.PosterURL)" style="width:200px;height:150px"  />
        </div>
    </div>
</div>

<div style="margin-top:10px">
    <p style="margin-top:10px"></p>
</div>

<div class="container-fluid">

    <div class="row">
    </div>
    <div class="row">
        <div class="col-6 offset-1">
            @foreach (var item in Model.GenreNames)
            {
                @if (Model.GenreNames[0] != item)
                {
                    <b style="margin-left:2.5em;font-size:large;font-family:'Copperplate Gothic'">@item</b>
                }
                else
                {
                    <b style="font-size:large;font-family:'Copperplate Gothic'">@item</b>
                }

            }
        </div>
        <div class="col-3 offset-2">
            <p style="font-size:large"><b>Duration: </b><i>@Model.Duration min</i></p>
        </div>
    </div>
</div>


    <!-- 'Copperplate Gothic' font -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-5 offset-1" style="background-color:burlywood">

            </div>
            <br />
        </div>
        <div class="row">
            <div class="col-5 offset-1" style="background-color:burlywood">
                <table class="table" style="width:100%">
                    <colgroup>
                        <col span="1" style="width: 50%;">
                        <col span="1" style="width: 25%;">
                        <col span="1" style="width: 25%;">
                    </colgroup>
                    <thead class="thead-dark">
                        <tr>
                            <th style="vertical-align:middle">Projection Date</th>
                            <th style="vertical-align:central">Projection Time</th>
                            <th style="vertical-align:central">Make reservation</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Projections)
                        {
                            @if (DateTime.Compare(@item.ProjectionTime, DateTime.Now) > 0)
                            {
                                <tr>
                                    <td>
                                        <b>
                                            @item.ProjectionTime.ToString("dd/MM/yyyy"), @item.ProjectionTime.DayOfWeek
                                        </b>
                                    </td>
                                    <td>
                                        <b>
                                            @item.ProjectionTime.ToString("HH:mm")
                                        </b>

                                    </td>
                                    <td>
                                        <a href="/Movies/MovieReservation/@item.Id">
                                            <img class="img-fluid" src="~/images/ticket.png" width:5px;height:5px>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-2 offset-3">
                <b style="font-size:large">Cast</b>
                <ul>
                    @foreach (var item in Model.ActorNames)
                    {
                        <li><i>@item</i></li>
                    }
                </ul>
                <p style="font-size:large"><b>Director: </b><i>@Model.Director</i></p>
            </div>

        </div>


    </div>


@if (ViewBag.AlertMess == null )
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <strong>Holy guacamole!</strong> You should check in on some of those fields below.
    </div>
}


    <div class="footer">
    </div>






